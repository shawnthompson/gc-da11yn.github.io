{% include "partials/analytics-chart.njk" %}

<p class="mrgn-tp-lg"><a href="{{ rootPath }}en/website-usage-analytics-data-view"><i class="fas fa-server mrgn-rght-md" aria-hidden="true"></i>Check out this information in a data view</a></p>

{% include "partials/analytics-toc.njk" %}

{% for month, results in analytics %}
<section class="mrgn-tp-lg mrgn-bttm-lg">
	<div class="well">
	<h2 class="mrgn-tp-sm" id="{{ month }}">{{ month | formatYearMonth }}</h2>
	<p>
		The site recorded <strong>{{ results.results[0].sessions }}</strong> visits, with
		<strong>{{ results.results[0].newUsers }}</strong> users and
		<strong>{{ results.results[0].screenPageViews }}</strong> page views.
		The average bounce rate is <strong>{{ results.results[0].bounceRate }}</strong>, and the average session duration is
		<strong>{{ results.results[0].avgSessionDuration }} minutes</strong>.
	</p>
	<p>
		{% set devices = results.results[0].topDevices %}
		{% if devices[0] %}
		The most used device is <strong>{{ devices[0].device }} ({{ devices[0].percentage }}%)</strong>,
		{% endif %}
		{% if devices[1] %}
		followed by <strong>{{ devices[1].device }} ({{ devices[1].percentage }}%)</strong>
		{% endif %}
		{% if devices[2] %}
		and <strong>{{ devices[2].device }} ({{ devices[2].percentage }}%)</strong>.
		{% endif %}

	</p>
	<p>The top three countries by visitors are:</p>
	<ol>
		<li><strong>{{ results.results[0].topCountries[0] }}</strong>,</li>
		<li><strong>{{ results.results[0].topCountries[1] }}</strong>, and</li>
		<li><strong>{{ results.results[0].topCountries[2] }}</strong>.</li>
	</ol>
	</div>
</section>
{% endfor %}

